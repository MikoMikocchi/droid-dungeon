# EditorConfig helps maintain consistent coding styles
# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt,kts,groovy,scala}]
indent_style = space
indent_size = 4

[*.{xml,html,css,scss,json,yml,yaml,md,markdown,txt}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{sh,bat}]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
charset = utf-8

[*.{png,jpg,jpeg,gif,webp,ico}]
binary = true
trim_trailing_whitespace = false

[*.properties]
charset = latin1
trim_trailing_whitespace = false
end_of_line = lf
